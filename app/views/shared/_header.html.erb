<nav class="navbar navbar-light bg-light">
  <%= link_to t('.project_title'), root_path, class: 'navbar-brand' %>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t('.greeting') %><b><%= current_user.first_name || current_user.email %></b>! |
      <%= link_to t('.log_out'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('.log_in'), new_session_path(@user) %> |
      <%= link_to t('.sign_up'), new_registration_path(@user) %>
    <% end %>
  </span>
</nav>
