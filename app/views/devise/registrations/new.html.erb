<div class="row justify-content-left mt-1">
  <div class="col col-md-4">
    <h3 class="text-center"><%= t('.sign_up') %></h3>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <p>
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control-min' %>
            </p>

            <p>
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, class: 'form-control-min' %>
            </p>

            <p>
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autofocus: true, class: 'form-control-min' %>
            </p>

            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control-min' %>
              <%= octicon 'check', class: 'text-success hide' %>
              <%= octicon 'x', class: 'text-danger hide' %>
            </p>

            <p>
              <div class="check-confirm">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control-min' %>
                <%= octicon 'check', class: 'text-success hide' %>
                <%= octicon 'x', class: 'text-danger hide' %>
              </div>
            </p>

            <%= f.submit t('.submit'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-1 ml-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
