<tbody>
  <tr>
    <td><%= badge.name %></td>
    <td><%= image_tag badge.logo_url %></td>
    <td><%= badge.description %></td>
    <td><%= I18n.t(".badge_rules.#{badge.rule}") %></td>

    <td class="align-middle">
      <%= link_to t('links.show'),
                  admin_badge_path(badge),
                  class: 'btn btn-primary' %>
    </td>

    <td class="align-middle">
      <%= link_to t('links.edit'),
                  edit_admin_badge_path(badge),
                  class: 'btn btn-primary' %>
    </td>

    <td class="align-middle">
      <%= link_to t('links.delete'),
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('links.are_you_sure') },
                  class: 'btn btn-danger' %>
    </td>
  </tr>
</tbody>
