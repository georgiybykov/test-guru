<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h2 class="text-center"><b><%= t('.header', badge_name: @badge.name) %></b></h2>

    <div class="card border-primary mb-3">
      <div class="card-body">
        <div class="form-group">
          <p>
            <b><%= t('.logo') %></b>
            <%= image_tag @badge.logo_url %>
          </p>

          <p>
            <b><%= t('.description') %></b>
            <%= @badge.description %>
          </p>

          <p>
            <b><%= t('.rule') %></b>
            <%= I18n.t(".badge_rules.#{@badge.rule}") %>
          </p>
        </div>
      </div>
    </div>

    <p>
      <%= link_to t('.edit_badge_button'), edit_admin_badge_path(@badge), class: 'btn btn-success' %>
      <%= link_to t('links.delete'),
                  admin_badge_path(@badge),
                  method: :delete,
                  data: { confirm: t('links.are_you_sure') },
                  class: 'btn btn-danger' %>
      <%= link_to t('links.back'), admin_badges_path, class: 'btn btn-primary' %>
    </p>
  </div>
</div>
