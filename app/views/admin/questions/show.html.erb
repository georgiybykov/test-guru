<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h2 class="text-center"><b><%= t('.header', title: @question.test.title) %></b></h2>

    <h5>
      <strong><%= t('.question_label') %></strong>
      <%= @question.body %>
    </h5>

    <p><%= link_to t('.new_answer_button'), new_admin_question_answer_path(@question), class: "btn btn-success" %></p>

    <h5><b><%= t('.answers_label') %></b></h5>

    <div class="card border-primary mb-3">
      <div class="card-body">
        <div class="form-group">
          <ol>
            <%= render @question.answers %>
          </ol>
        </div>
      </div>
    </div>

    <p>
      <%= link_to t('.edit_question_button'), edit_admin_question_path(@question), class: "btn btn-primary" %>
      <%= link_to t('links.delete'),
                  admin_test_path(@question),
                  method: :delete,
                  data: { confirm: t('links.are_you_sure') },
                  class: "btn btn-danger" %>
      <%= link_to t('links.back'), admin_test_path(@question.test), class: "btn btn-primary" %>
    </p>
  </div>
</div>
