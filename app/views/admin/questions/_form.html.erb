<div class="card border-primary mb-2">
  <div class="card-body">
    <%= form_with model: [:admin, @test, @question], local: true do |form| %>
      <%= render 'shared/errors', resource: @question %>

      <div class="form-group">
        <p>
          <%= form.label :body %><br>
          <%= form.text_area :body, id: :question_body, class: 'form-control' %>
        </p>

        <p><%= form.submit t('.create_question'), class: "btn btn-success"  %></p>
      </div>
    <% end %>
  </div>
</div>
