<div class="card border-primary">
  <div class="card-body">
    <%= form_with model: [:admin, @test], local: true do |form| %>
      <%= render 'shared/errors', resource: @test %>

      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, id: :test_title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :level %>
          <%= form.number_field :level, id: :test_level, min: 0, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :passage_time %><br>
          <%= form.number_field :passage_time, id: :test_timer, class: 'form-control' %>
        </p>

        <% if @test.persisted? %>
          <p>
            <%= form.label :author_id %>
            <%= form.collection_select :author_id, User.all, :id, :email, prompt: true, class: 'form-control' %>
          </p>
        <% end %>

        <p>
          <%= form.submit t(".#{action_name}_test"), class: "btn btn-success" %>
          <%= link_to t('links.back'), admin_tests_path, class: "btn btn-primary" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
