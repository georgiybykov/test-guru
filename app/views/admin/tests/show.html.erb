<div class="row justify-content-center mt-3">
  <div class="col col-md-9">
    <h2 class="text-center"><b><%= t('.header', title: @test.title) %></b></h2>

    <h5>
      <strong><%= t('.level') %></strong>
      <%= @test.level %>
    </h5>

    <p><%= link_to t('.new_question_button'), new_admin_test_question_path(@test), class: "btn btn-success" %></p>

    <h4><b><%= t('.questions_title') %></b></h4>

    <div class="card border-primary mb-3">
      <div class="card-body">
        <div class="form-group">
          <ol>
            <%= render @test.questions %>
          </ol>
        </div>
      </div>
    </div>

    <p>
      <%= link_to t('.edit_test_button'), edit_admin_test_path(@test), class: "btn btn-primary" %>
      <%= link_to t('links.delete'),
                  admin_test_path(@test),
                  method: :delete,
                  data: { confirm: t('links.are_you_sure') },
                  class: "btn btn-danger" %>
      <%= link_to t('links.back'), admin_tests_path, class: "btn btn-primary" %>
    </p>
  </div>
</div>
