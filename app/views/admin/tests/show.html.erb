<h1><%= t('.header', title: @test.title) %></h1>

<p>
  <strong><%= t('.level') %></strong>
  <%= @test.level %>
</p>

<%= link_to t('.new_question_button'), new_admin_test_question_path(@test) %>

<h2><%= t('.questions_title') %></h2>

<ol>
  <%= render @test.questions %>
</ol>

<p>
  <%= link_to t('.edit_test_button'), edit_admin_test_path(@test) %>
  <%= link_to t('.delete_test_button'),
              admin_test_path(@test),
              method: :delete,
              data: { confirm: t('.are_you_sure') } %>
  <%= link_to t('.back_tests_button'), admin_tests_path %>
</p>
